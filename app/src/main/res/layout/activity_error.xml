<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_error"
    style="@style/RelativeLayout.Teal"
    tools:context="com.vk.android.mobileweatherguide.ErrorActivity">

    <TextView
        style="@style/TextView.Headline.HorizontalCenter"
        android:id="@+id/error_title"
        android:layout_marginTop="@dimen/space_between_content_areas"
        android:layout_centerVertical="true"
        android:text="@string/error_title" />

    <TextView
        style="@style/TextView.Subheading.HorizontalCenter"
        android:id="@+id/error_subtitle"
        android:layout_below="@id/error_title"
        android:layout_marginTop="@dimen/space_between_content_areas"
        android:text="@string/error_subtitle" />

    <TextView
        style="@style/TextView.Subheading.HorizontalCenter"
        android:id="@+id/error_details"
        android:layout_below="@id/error_subtitle"
        android:layout_marginTop="@dimen/medium_gap_between_content_areas"
        android:text="" />

</RelativeLayout>